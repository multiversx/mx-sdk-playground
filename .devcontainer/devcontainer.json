{
    "image": "multiversx/development-playground:latest",
    "remoteEnv": {
        "SANDBOX": "${containerWorkspaceFolder}/sandbox",
        "TESTWALLETS": "/home/developer/multiversx-sdk/testwallets/latest/users"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "rust-lang.rust-analyzer",
                "vadimcn.vscode-lldb"
            ],
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash",
                "terminal.integrated.profiles.linux": {
                    "bash": {
                        "path": "/usr/bin/bash"
                    }
                }
            }
        },
        "codespaces": {
            "extensions": [
                "rust-lang.rust-analyzer",
                "vadimcn.vscode-lldb"
            ],
            "settings": {
                "terminal.integrated.env.linux": {},
                "terminal.integrated.defaultProfile.linux": "bash",
                "terminal.integrated.profiles.linux": {
                    "bash": {
                        "path": "/usr/bin/bash"
                    }
                }
            },
            "openFiles": [
                "playground.md"
            ]
        }
    }
}
